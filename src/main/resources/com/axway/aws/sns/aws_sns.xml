<ui>
	<panel columns="2">
		<NameAttribute />

		<group label="AWS_SNS_SETTINGS_LABEL" span="2" columns="2" margin="0,0,0,7" fill="false">
			<!-- Credenciais -->
			<RadioGroupAttribute field="credentialType" label="AWS_SNS_CREDENTIAL_TYPE_LABEL"
				displayName="AWS_SNS_CREDENTIAL_TYPE_NAME" description="AWS_SNS_CREDENTIAL_TYPE_DESCRIPTION"
				removeEnvWhenFieldDisabled="true">
				<choice value="local" label="AWS_SNS_CREDENTIAL_TYPE_LOCAL_LABEL" />
				<panel margin="0,0,0,7" columns="2" span="2">
					<ReferenceSelector field="awsCredential" 
						selectableTypes="ApiKeyProfile" label="CHOOSE_AWS_CREDENTTIAL_LABEL"
						title="CHOOSE_AWS_CREDENTTIAL_DIALOG_TITLE" searches="AuthProfilesGroup,ApiKeyGroup,ApiKeyProviderProfile" />
				</panel>
				<choice value="file" label="AWS_SNS_CREDENTIAL_TYPE_FILE_LABEL" />
				<panel margin="0,0,0,7" columns="2" span="2">
					<TextAttribute field="credentialsFilePath" label="AWS_SNS_CREDENTIALS_FILE_PATH_LABEL"
						displayName="AWS_SNS_CREDENTIALS_FILE_PATH_NAME" description="AWS_SNS_CREDENTIALS_FILE_PATH_DESCRIPTION" />
				</panel>
				<choice value="iam" label="AWS_SNS_CREDENTIAL_TYPE_IAM_LABEL" />
			</RadioGroupAttribute>

			<ComboAttribute field="awsRegion" label="AWS_SNS_REGION_LABEL"
				displayName="AWS_SNS_REGION_NAME" description="AWS_SNS_REGION_DESCRIPTION" 
				contentSource="com.vordel.circuit.aws.RegionUtils.regions"
				required="true" stretch="true" />

			<ReferenceSelector field="clientConfiguration" required="true"
				selectableTypes="AWSClientConfiguration" label="AWS_CLIENT_CONFIGURATION"
				title="AWS_CLIENT_CONFIGURATION_DIALOG_TITLE" searches="AWSSettings" />
		</group>

		<tabFolder span="2">
			<tab label="AWS_SNS_TAB_SETTINGS_LABEL">
				<panel columns="2">
					<TextAttribute field="topicArn" label="AWS_SNS_TOPIC_ARN_LABEL"
						displayName="AWS_SNS_TOPIC_ARN_NAME" description="AWS_SNS_TOPIC_ARN_DESCRIPTION" 
						required="true" />

					<TextAttribute field="messageSubject" label="AWS_SNS_MESSAGE_SUBJECT_LABEL"
						displayName="AWS_SNS_MESSAGE_SUBJECT_NAME" description="AWS_SNS_MESSAGE_SUBJECT_DESCRIPTION" />

					<ComboAttribute field="messageStructure" label="AWS_SNS_MESSAGE_STRUCTURE_LABEL"
						displayName="AWS_SNS_MESSAGE_STRUCTURE_NAME" description="AWS_SNS_MESSAGE_STRUCTURE_DESCRIPTION"
						contentSource="com.axway.aws.sns.PublishSNSMessageStructure.messageStructure"
						includeBlank="false" required="true" stretch="true" />
				</panel>
			</tab>
			<tab label="AWS_SNS_TAB_ADVANCED_LABEL">
				<panel columns="2">
					<TextAttribute field="messageAttributes" label="AWS_SNS_MESSAGE_ATTRIBUTES_LABEL"
						displayName="AWS_SNS_MESSAGE_ATTRIBUTES_NAME" description="AWS_SNS_MESSAGE_ATTRIBUTES_DESCRIPTION" />

					<TextAttribute field="retryDelay" label="AWS_SNS_RETRY_DELAY_LABEL"
						displayName="AWS_SNS_RETRY_DELAY_NAME" description="AWS_SNS_RETRY_DELAY_DESCRIPTION" />
				</panel>
			</tab>
		</tabFolder>
	</panel>
</ui> 